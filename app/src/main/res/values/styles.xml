<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button</item>
        <item name="colorButtonNormal">@color/colorYellowBtn</item>
        <item name="colorControlHighlight">@color/colorYellowBtn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_sp_18</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="fullTitle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_sp_18</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="subtitle">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_sp_10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="fullDescription">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_size_sp_14</item>
        <item name="fontFamily">@font/roboto_italic</item>
        <item name="android:padding">@dimen/padding_dp_16</item>
    </style>


</resources>