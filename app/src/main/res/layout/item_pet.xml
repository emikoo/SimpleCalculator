<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_pet"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/margin_dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/title_pet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_dp_16"
        android:layout_marginEnd="@dimen/margin_dp_16"
        app:layout_constraintEnd_toStartOf="@id/like_pet"
        app:layout_constraintStart_toEndOf="@id/image_pet"
        app:layout_constraintTop_toTopOf="@id/image_pet"
        tools:text="Title" />

    <TextView
        android:id="@+id/subtitle_pet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_dp_16"
        android:layout_marginTop="@dimen/margin_dp_8"
        android:layout_marginEnd="@dimen/margin_dp_16"
        app:layout_constraintEnd_toStartOf="@id/like_pet"
        app:layout_constraintStart_toEndOf="@id/image_pet"
        app:layout_constraintTop_toBottomOf="@id/title_pet"
        tools:text="Subtitle" />

    <ImageButton
        android:id="@+id/like_pet"
        android:layout_width="@dimen/margin_dp_24"
        android:layout_height="@dimen/margin_dp_24"
        android:layout_margin="@dimen/margin_dp_16"
        android:background="@null"
        android:src="@drawable/ic_unliked"
        app:layout_constraintBottom_toBottomOf="@id/image_pet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_pet" />


</androidx.constraintlayout.widget.ConstraintLayout>